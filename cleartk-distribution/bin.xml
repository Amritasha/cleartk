<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<moduleSets>
		<moduleSet>

			<!-- Enable access to all projects in the current multimodule build! -->
			<useAllReactorProjects>true</useAllReactorProjects>

			<binaries>
				<outputDirectory>/</outputDirectory>
				<unpack>false</unpack>

				<!-- Also include all runtime dependencies of the modules -->
				<dependencySets>
					<dependencySet>
						<outputDirectory>lib</outputDirectory>
						<unpack>false</unpack>
						<scope>runtime</scope>
						<excludes>
							<exclude>org.cleartk:cleartk-chunker</exclude>
							<exclude>org.cleartk:cleartk-examples</exclude>
							<exclude>org.cleartk:cleartk-ml</exclude>
							<exclude>org.cleartk:cleartk-ml-libsvm</exclude>
							<exclude>org.cleartk:cleartk-ml-mallet</exclude>
							<exclude>org.cleartk:cleartk-ml-opennlp-maxent</exclude>
							<exclude>org.cleartk:cleartk-ml-svmlight</exclude>
							<exclude>org.cleartk:cleartk-named-entity</exclude>
							<exclude>org.cleartk:cleartk-syntax</exclude>
							<exclude>org.cleartk:cleartk-syntax-opennlp</exclude>
							<exclude>org.cleartk:cleartk-syntax-dependency</exclude>
							<exclude>org.cleartk:cleartk-timeml</exclude>
							<exclude>org.cleartk:cleartk-token</exclude>
							<exclude>org.cleartk:cleartk-util</exclude>
						</excludes>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>
	</moduleSets>
</assembly>