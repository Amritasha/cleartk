<?xml version="1.0" encoding="UTF-8"?>
<cpeDescription xmlns="http://uima.apache.org/resourceSpecifier">
<collectionReader>
<collectionIterator>
<descriptor>
<import name="org.cleartk.corpus.genia.GeniaPosGoldReader"/>
</descriptor>
<configurationParameterSettings>
<nameValuePair>
<name>GeniaCorpus</name>
<value>
<string>test/data/corpus/genia/GENIAcorpus3.02.articleA.pos.xml</string>
</value>
</nameValuePair>
<nameValuePair>
<name>LoadSentences</name>
<value>
<boolean>true</boolean>
</value>
</nameValuePair>
<nameValuePair>
<name>LoadTokens</name>
<value>
<boolean>true</boolean>
</value>
</nameValuePair>
</configurationParameterSettings>
</collectionIterator>
</collectionReader>
<casProcessors casPoolSize="3" processingUnitThreadCount="1">
<casProcessor deployment="integrated" name="Subtokenizer">
<descriptor>
<import name="org.cleartk.token.Subtokenizer"/>
</descriptor>
<deploymentParameters/>
<errorHandling>
<errorRateThreshold action="terminate" value="0/1000"/>
<maxConsecutiveRestarts action="terminate" value="30"/>
<timeout max="100000" default="-1"/>
</errorHandling>
<checkpoint batch="10000" time="1000ms"/>
</casProcessor>
<casProcessor deployment="integrated" name="ChunkTokenizerDataWriter">
<descriptor>
<import name="org.cleartk.token.chunk.ChunkTokenizerDataWriter"/>
</descriptor>
<deploymentParameters/>
<errorHandling>
<errorRateThreshold action="terminate" value="0/1000"/>
<maxConsecutiveRestarts action="terminate" value="30"/>
<timeout max="100000" default="-1"/>
</errorHandling>
<checkpoint batch="10000" time="1000ms"/>
<configurationParameterSettings>
<nameValuePair>
<name>OutputDirectory</name>
<value>
<string>test/data/token/chunk</string>
</value>
</nameValuePair>
<nameValuePair>
<name>DataWriter</name>
<value>
<string>org.cleartk.classifier.mallet.MalletCRFDataWriter</string>
</value>
</nameValuePair>
<nameValuePair>
<name>Compress</name>
<value>
<boolean>true</boolean>
</value>
</nameValuePair>
</configurationParameterSettings>
</casProcessor>
</casProcessors>
<cpeConfig>
<numToProcess>-1</numToProcess>
<deployAs>immediate</deployAs>
<checkpoint batch="0" time="300000ms"/>
<timerImpl></timerImpl>
</cpeConfig>
</cpeDescription>
